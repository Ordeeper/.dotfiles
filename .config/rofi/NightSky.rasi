@import "~/.cache/wal/colors-rofi-dark"

* {
    /*--------- Properties for All Widgets ---------*/
    font: "Hack regular 11.6";
    background-color: transparent;
    vertical-align: 0.5;
    spacing: 0;
}

window {
    transparency: "background";
    background-color: @bg;
    width: 43%;
    height: 58.5%;
}

mainbox {
    padding: 20;
    children: [inputbar,listview,mode-switcher];
}

prompt {
    enabled: false;
}

entry {
    text-color: @primary;
    placeholder: "Type to Filter";
    horizontal-align: 0.5;
    font: "Hack Regular 12";
    padding: 15 15 15 27;
    cursor: text;
    text-color: @primary;
}

listview {
    margin: 13 0 13 0;
    spacing: 3;
    border-radius: 9 9 0 0;
    padding: 11;
}

mode-switcher {
    padding: 0 12;
}

button {
    text-color: @secondary;
    padding: 9;
    font: "icomoon\-feather Regular 18";
    cursor: pointer;
    border-radius: 9;
}

button.selected {
    text-color: @primary;
    background-color: @selected-bg;
}

element {
    children: [element-icon,element-text];
    text-color: @fg;
    cursor: pointer;
    border-radius: 9;
}

element-icon {
    size: 39;
    padding: 6 9;
    cursor: inherit;
}

element-text {
    text-color: inherit;
    cursor: inherit;
}

element.selected {
    text-color: @selected-fg;
    background-color: @selected-bg;
}

element.active {
    text-color: @active-fg;
}

element.urgent {
    text-color: @urgent-fg;
}

