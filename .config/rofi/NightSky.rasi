@import "~/.cache/wal/colors-rofi-dark"

* {
    /*--------- Properties for All Widgets ---------*/
    font: "Hack regular 12";
    background-color: transparent;
    vertical-align: 0.5;
    spacing: 0;
}

window {
    width: 600px;
    location: center;
    anchor: center;
    background-color: @bg;
    border: 1px;
}

mainbox {
    margin: 27px;
    spacing: 27px;
    children: [inputbar,listview,mode-switcher];
}

prompt {
    enabled: false;
}

entry {
    text-color: @fg;
    placeholder: "Type to Filter. . .";
    horizontal-align: 0.5;
    font: "Hack Regular 13";
    padding: 0px 15px 0px 27px;
    cursor: text;
}

listview {
    lines: 5;
    spacing: 3;
}

button {
    text-color: @fg-secondary;
    padding: 9px;
    font: "icomoon\-feather Regular 18";
    cursor: pointer;
    border-radius: 9px;
}

button.selected {
    text-color: @fg-primary;
    border: 1px;
}

element {
    children: [element-icon,element-text];
    text-color: @fg-secondary;
    cursor: pointer;
}

element-icon {
    size: 30;
    padding: 9px;
    cursor: inherit;
}

element-text {
    text-color: inherit;
    cursor: inherit;
}

element.selected {
    text-color: @fg;
    border-radius: 9px;
    border: 1px;
}

element.active {
    text-color: @fg-primary;
}

element.urgent {
    text-color: @fg-urgent;
}

